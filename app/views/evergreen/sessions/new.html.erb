<% form_tag session_path do -%>
  <div>
    <%= label_tag 'email' %>
    <%= text_field_tag 'email' %>
  </div>
  <div>
    <%= label_tag 'password' %>
    <%= password_field_tag 'password' %>
  </div>
  <div><%= submit_tag t('evergreen.sessions.new.submit') %></div>
<% end -%>

<ul>
  <li><%= link_to t('evergreen.users.new.link'), new_user_path %></li>
  <li><%= link_to t('evergreen.passwords.new.link'), new_password_path %></li>
</ul>